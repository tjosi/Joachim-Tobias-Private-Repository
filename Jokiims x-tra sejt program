import pyautogui
import sys
from tkinter import Tk, Label, Button




class Main:
    def __init__(self, master):
        self.root = root
        self.root.title("Joachim")
        self.root.geometry("1920x1080")
        self.label = Label(master, text="Joachim lære Tkinter")
        self.label.pack()
        self.knap_button = Button(master, text="Hej", command=self.knap)
        self.knap_button.pack()
        self.root.resizable(width=True, height=True)
        self.close_button = Button(master, text="Close", command=master.quit)
        self.close_button.pack()

    def knap(self):
        print("Hej med dig!!")




if __name__ == '__main__':
    root = Tk()
    obj = Main(root)
    root.mainloop()

